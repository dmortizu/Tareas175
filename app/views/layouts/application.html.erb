<!DOCTYPE html>
<html>
  <head>
    <title>Sitio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <!--<a class="nav-link" href="#">Inicio</a>-->
              <%= link_to "Inicio", welcome_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Tareas", tareas_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Crear tarea", new_tarea_path, class: "nav-link"%>
            </li>

            <% if usuario_signed_in? %>
            <!--botones de session-->
            <li class="nav-item">
              <%= link_to "Cerrar sesión",
              destroy_usuario_session_path,
              method:"delete", class: "nav-link" %>
            <li/>

            <%else%>
            <li class="nav-item">
                <%= link_to "Iniciar Sesión",
                new_usuario_session_path, class: "nav-link" %>
            </li>

            <li class="nav-item">
                <%= link_to "Crear Cuenta",
                new_usuario_registration_path, class: "nav-link" %>
            </li>
            <%end%>

          </ul>
        </div>
      </nav>
      <!--Flash-->
      <p> <%= notice %></p>
      <p> <%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
